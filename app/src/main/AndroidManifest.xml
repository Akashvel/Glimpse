<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.glimpse">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="Glimpse"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activityintro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".catogarizeactivity" android:label="Categorize"/>
        <activity android:name=".updateactivity" android:label="Update User"/>
        <activity android:name=".adactivity" android:label="Add User"/>
        <activity
            android:name=".searchactivity"
            android:label="Search User"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="Glimpse"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>